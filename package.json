{
  "name": "webvtt-validator",
  "version": "1.0.0",
  "description": "A lightweight WebVTT validation library with a beautiful UI",
  "packageManager": "pnpm@9.15.0",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "vite build && node scripts/write-cjs-wrapper.mjs",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "test:browser": "pnpm run build && node test/browser/smoke.mjs",
    "test:dist": "pnpm run build && node test/dist/smoke.mjs",
    "test:watch": "vitest"
  },
  "keywords": [
    "webvtt",
    "validator",
    "vtt",
    "subtitles",
    "captions"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "vite": "^5.0.0",
    "vitest": "^4.0.16"
  },
  "files": [
    "dist",
    "src"
  ]
}
